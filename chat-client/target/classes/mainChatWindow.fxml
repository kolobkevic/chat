<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.kolobkevic.chat.chat_client.MainChatController">
    <VBox fx:id="loginPanel">
        <Label text="Login: " />
        <TextField fx:id="loginField" />
        <Label text="Password: " />
        <PasswordField fx:id="passwordField" />
        <Button onAction="#sendAuth" text="Connect" />
    </VBox>
    <VBox fx:id="mainChatPanel" visible="false">
        <MenuBar>
            <Menu text="File">
                <MenuItem onAction="#connectToServer" text="Connect" />
                <MenuItem onAction="#disconnectFromServer" text="Disconnect" />
                <MenuItem onAction="#someAction" text="Item3" />
                <MenuItem onAction="#someAction" text="Item4" />
                <MenuItem onAction="#exit" text="Exit" />
            </Menu>
            <Menu text="Edit">
                <MenuItem onAction="#someAction" text="Item1" />
                <MenuItem onAction="#someAction" text="Item2" />
                <MenuItem onAction="#someAction" text="Item3" />
                <MenuItem onAction="#someAction" text="Item4" />
                <MenuItem onAction="#someAction" text="Item5" />
            </Menu>
            <Menu text="View">
                <MenuItem onAction="#someAction" text="Item1" />
                <MenuItem onAction="#someAction" text="Item2" />
                <MenuItem onAction="#someAction" text="Item3" />
                <MenuItem onAction="#someAction" text="Item4" />
                <MenuItem onAction="#someAction" text="Item5" />
            </Menu>
            <Menu text="Help">
                <MenuItem onAction="#showHelp" text="Help" />
                <MenuItem onAction="#showAbout" text="About" />
                <MenuItem onAction="#someAction" text="Item3" />
                <MenuItem onAction="#someAction" text="Item4" />
                <MenuItem onAction="#someAction" text="Item5" />
            </Menu>
        </MenuBar>

        <HBox VBox.vgrow="ALWAYS">
            <TextArea fx:id="mainChatArea" editable="false" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <HBox.margin>
                    <Insets left="5.0" right="5.0" />
                </HBox.margin>
            </TextArea>
            <ListView fx:id="contactsList" minWidth="100.0">
                <HBox.margin>
                    <Insets left="5.0" right="5.0" />
                </HBox.margin>
            </ListView>
         <VBox.margin>
            <Insets bottom="2.0" top="2.0" />
         </VBox.margin>
        </HBox>

        <HBox VBox.vgrow="ALWAYS">
            <TextField fx:id="inputField" onAction="#sendMessage" prefHeight="50.0" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets left="5.0" right="5.0" />
                </HBox.margin>
            </TextField>
            <Button fx:id="btnSend" minWidth="100.0" onAction="#sendMessage" prefHeight="50.0" text="Send">
                <HBox.margin>
                    <Insets left="5.0" right="5.0" />
                </HBox.margin>
            </Button>
         <VBox.margin>
            <Insets bottom="2.0" />
         </VBox.margin>
        </HBox>

    </VBox>

</AnchorPane>
